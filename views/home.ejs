<div class="container main-container headerOffset globalPaddingBottom">

        <!-- Main component call to action -->
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="home-intro">
                    <h2>American Food & Drinks, importing over 500 containers a year<br/> <span>Experience</span> - sweets, drinks & more </h2>
                </div>
                <hr>
            </div>
        </div>
    
        <div style="clear:both"></div>
        <div class="row">
            <div class="col-sm-10 show-case-wrapper center-block relative">
                <div id="productShowCase" class="owl-carousel owl-theme">


                    <% promotions.forEach(promotion => { %>
                        <div class="product-slide">
                            <div class="col-sm-5 product-slide-left">
                                <a class="product-slide-img"> <img alt="img" src="<%= promotionImageUrl %>/<%= promotion.image %>" class="img-responsive"></a>
                            </div>
                            <div class="col-sm-7">
                                <div class="product-slide-inner ">
                                    <h1 class="product-title"><%= promotion.title %></h1>                               
                                    
                                    <div class="details-description">
                                       <%- promotion.description %>
                                    </div>                                
                                </div>
                            </div>
                        </div>
                    <% }); %>                    

                </div>
                <!--/#productShowCase -->
    
                <div style="clear:both;"></div>
                <a id="ps-next" class="ps-nav"> <i class="fa fa-angle-right"></i> </a> <a id="ps-prev" class="ps-nav"> <i
                    class="fa fa-angle-left"></i> </a></div>
            <!--/.show-case-wrapper -->
        </div>
    
    
          <!--/.section-block-->            
          <div class="width100 section-block">
                <h3 class="section-title"><span> BRAND</span> <a id="nextBrand" class="link pull-right carousel-nav"> <i
                        class="fa fa-angle-right"></i></a> <a id="prevBrand" class="link pull-right carousel-nav"> <i
                        class="fa fa-angle-left"></i> </a></h3>
        
                <div class="row">
                    <div class="col-lg-12">
                        <ul class="no-margin brand-carousel owl-carousel owl-theme">                                                         
                            <% brandImages.forEach(function(brandImage) { %>
                                <li class="brand-box"><a href="<%= brandImage.link %>"><img src="<%= brandImageUrl%>/<%= brandImage.image%>" alt="<%= brandImage.name %>"></a></li>
                            <% }); %>
                                                                                    
                        </ul>
                    </div>
                </div>
                <!--/.row-->
            </div>
            <!--/.section-block-->
    
        <div class="row featuredPostContainer ">
            <div class="featured-category"></div>
            <div class="col-lg-12">
                <h3 class="boxes-title-1"><span>FEATURES PRODUCT</span></h3>
            </div>
            <div style="clear:both;"></div>

            <div id="productslider" class="owl-carousel owl-theme">
               
                <% products.forEach(function(p){ %>
                <div class="item">
                    <div class="product">
                        
                        <div class="image">                            
                            <a href="/products/<%= p.brand %>/<%= p.slug %>"><img src="<%= productImageUrl %>/<%= p.image %>" alt="img" class="img-responsive"></a>                            
                        </div>
                        <div class="description">
                            <h4><%= p.name %></h4>                                                      
                        </div>

                        <% if (loggedIn) { %>
                        <div class="price"><span>Â£<%= parseFloat(p.price).toFixed(2) %></span></div>
                        <% } %>  
                        <div class="action-control">
                            <% if (loggedIn) { %>
                            <a href="/cart/add/<%= p.slug %>" class="btn btn-primary"> 
                                <span class="add2cart"><i class="glyphicon glyphicon-shopping-cart"> </i> Add to cart </span> 
                            </a>
                            <% } else {%>
                            <p>Please login to see price.</p>
                            <% } %>
                        </div>
                    </div>
                </div>
                <% }); %>
                                
            </div>
            <!--/.productslider-->
    
        </div>
        <!--/.featuredPostContainer-->
    </div>
    <!-- /main container -->
    
<div class="w100 sectionCategory">
    <div class="container">
        <div class="sectionCategoryIntro text-center">
            <h1>Featured Categories</h1>            
        </div>
        <div class="row subCategoryList clearfix">
            <% categoryImages.forEach(categoryImage => {%>
                <div class="col-md-2 col-sm-3 col-xs-4  col-xs-mini-6  text-center ">
                    <div class="thumbnail">                   
                        <a class="subCategoryThumb" href="<%= categoryImage.link %>">
                            <img src="<%= categoryImageUrl %>/<%= categoryImage.image%>" class="img-rounded " alt="img"> 
                        </a> 
                            <a href="<%= categoryImage.link %>" class="subCategoryTitle"><span><%= categoryImage.name %></span></a>
                    </div>
                </div>
            <%}); %>      
        </div>
        <!--/.row-->

    </div>
    <!--/.container-->
</div>
<!--/.sectionCategory-->