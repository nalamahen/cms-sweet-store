<% include _layouts/header %>

<% if (count > 0) { %>
<div class="row products">
    
    <% products.forEach(function(p){ %>
            <div class="col-xs-12 col-md-4 p" style={border:'2px'}>
                <a class="pa" href="/products/<%= p.brand %>/<%= p.slug %>">
                    <img class="pimage" src="/product_images/<%= p._id %>/<%= p.image %>" alt="">
                </a>
                <h4><%= p.name %></h4>
                <h4>Â£<%= parseFloat(p.price).toFixed(2) %></h4>
                <% if (loggedIn) { %>
                <p><a href="/cart/add/<%= p.slug %>">Add to cart</a></p>
                 <p><a href="/cart/add/<%= p.slug %>">Add to cart</a>&nbsp;&nbsp;<a class="vd" href="/products/<%= p.brand %>/<%= p.slug %>">View Details</a>  </p>
                <% } else {%>
                <p>Please login to purchase items.</p>
                <% } %>               
            </div>
        <% }); %>
    
</div>
<% } else {%>
<p>There are no products availabe for the brand.</p>
<% }%>

