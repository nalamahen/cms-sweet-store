<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Fav and touch icons -->
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="/assets/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="/assets/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="/assets/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="/ico/apple-touch-icon-57-precomposed.png">
    <link rel="shortcut icon" href="/assets/ico/favicon.png">
    <title>Bizzcandy</title>
    <!-- Bootstrap core CSS -->
    <link href="/assets/bootstrap/css/bootstrap.css" rel="stylesheet">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>

    <!-- Custom styles for this template -->
    <link href="/assets/css/style.css" rel="stylesheet">

    <!-- Just for debugging purposes. -->
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->

    <!-- include pace script for automatic web page progress bar  -->

    <script>
        paceOptions = {
            elements: true
        };
    </script>
    <script src="/assets/js/pace.min.js"></script>


</head>

<body>

<!-- Fixed navbar start -->
<div class="navbar navbar-tshop navbar-fixed-top megamenu" role="navigation">
    <div class="navbar-top">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-sm-6 col-xs-6 col-md-6">
                    <div class="pull-left ">
                        <ul class="userMenu ">
                            <li class="contact"><span class="hidden-xs">HELP</span><i class="glyphicon glyphicon-info-sign hide visible-xs "></i></a></li>
                            <li class="phone-number contact"> <span> <i class="glyphicon glyphicon-phone-alt "></i></span> <span class="hidden-xs" style="margin-left:5px"> +44 7877884697 </span></li>
                            <li class="phone-number contact"> <span> <i class="glyphicon glyphicon-envelope "></i></span> <span class="hidden-xs" style="margin-left:5px"> bizzcandy@gmail.com </span></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-6 col-sm-6 col-xs-6 col-md-6 no-margin no-padding">
                    <div class="pull-right">
                        <ul class="userMenu">
                            <% if (user) { %>
                            <li><a href="/users/logout"><%= user.name %> (logout)</a></li>
                            <% } else {%>
                            <li><a href="/users/login"><span>Sign In</span> <i class="glyphicon hide visible-xs "></i></a></li>                           
                            <li><a href="/users/register">Register</a></li>
                            <% } %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--/.navbar-top-->

    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"><span
                    class="sr-only"> Toggle navigation </span> <span class="icon-bar"> </span> <span
                    class="icon-bar"> </span> <span class="icon-bar"> </span></button>
            <button type="button" onclick="window.location.href='/cart/checkout'" class="navbar-toggle" data-toggle="collapse">
                <i class="fa fa-shopping-cart colorWhite"> </i> <span
                    class="cartRespons colorWhite">Cart (
                        <% if (typeof cart !== "undefined") { %>
                        <%= cart.length %>
                        <% } else {%>
                        0
                        <% } %>
                    ) </span></button>
            <a class="navbar-brand " href="/"> <img src="/images/logo.png" alt="Bizzcandy"> </a>

            <!-- this part for mobile -->
            <div class="search-box pull-right hidden-lg hidden-md hidden-sm">
                <div class="input-group">
                    <button class="btn btn-nobg getFullSearch" type="button"><i class="fa fa-search"> </i></button>
                </div>
                <!-- /input-group -->

            </div>
        </div>

        <div class="navbar-collapse collapse">
            
            <ul class="nav navbar-nav">                                        
                <% pages.forEach(function(page){ %>
                    <!-- 
                    <% if (page.slug == "home") { %>
                        <li class="active">
                            <a href="/">
                                <%= page.title %>
                            </a>
                        </li>
                        <% } else {%>
                        <li>
                            <a href="/<%= page.slug %>">
                                <%= page.title %>
                            </a>
                        </li>
                        <% } %>
                    <% }); %>
                    -->
                <% if (user && user.admin == 1) { %>
                    <li><a href="/admin/pages">Admin Area</a></li>
                <% }%>  
            </ul>
        
            <!--- this part will be hidden for mobile version -->
            <div class="nav navbar-nav navbar-right hidden-xs">
                <div class="dropdown  cartMenu "><a href="/cart/checkout" class="dropdown-toggle"> <i
                        class="fa fa-shopping-cart"> </i> <span class="cartRespons"> Cart (
                            <% if (typeof cart !== "undefined") { %>
                            <%= cart.length %>
                            <% } else {%>
                            0
                            <% } %>
                        ) </span> <b class="caret"> </b> </a>                    
                </div>
                <!--/.cartMenu-->

                <div class="search-box">
                    <div class="input-group">
                        <button class="btn btn-nobg getFullSearch" type="button"><i class="fa fa-search"> </i></button>
                    </div>
                    <!-- /input-group -->

                </div>
                <!--/.search-box -->
            </div>
            <!--/.navbar-nav hidden-xs-->
        </div>
        <!--/.nav-collapse -->

    </div>
     <!--/.container -->

     <div class="search-full text-right"><a class="pull-right search-close"> <i class=" fa fa-times-circle"> </i> </a>

        <div class="searchInputBox pull-right">
            <form method="post" action="/products/search">
            <input type="search"  name="search" placeholder="type and hit enter to search" class="search-input">
            <button class="btn-nobg search-btn" type="submit"><i class="fa fa-search"> </i></button>
            </form>
        </div>
    </div>
    <!--/.search-full-->
    
</div>
<!-- /.Fixed navbar  -->

<div class="message-container" >
        <%- messages('messages', locals) %>
            
        <% if (errors) {%>
            <% errors.forEach(function(error) { %>
            <div class="alert alert-danger">
                <%= error.msg %>
            </div>
            <% });%>
        <% } %>
</div>

