<%- include('../_layouts/adminheader') %>

<h2 class="page-title">Add a promotion</h2>
<a href="/admin/promotions" class="btn btn-primary">Back to all promotions</a>
<br><br>

<form method="post" action="/admin/brand_images/add" enctype="multipart/form-data">
   
    <div class="form-group">
        <label for="">Title</label>
        <input type="text" class="form-control" name="name" value="<%= name %>" placeholder="Name">
    </div>
    
    <div class="form-group">
        <label for="">Link</label>
        <input type="text" class="form-control" name="link" value="<%= link %>" placeholder="link">
    </div>
    
    <div class="form-group">
        <label for="">Image</label>
        <input type="file" class="form-control" name="image" id="img">
        <img src="#" id="imgPreview" alt="">
    </div>

    <button class="btn btn-primary">Submit</button>
</form>

<script>
    
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            
            reader.onload = function(e) {
                $("#imgPreview").attr('src', e.target.result).width(100).height(100);
            }
            
            reader.readAsDataURL(input.files[0]);
        }
    }
    
    $("#img").change(function() {
        readURL(this);
    });
    
</script>

