<div class="row products">
    <% products.forEach(function(p){ %>
        <div class="col-xs-12 col-md-4 p">
            <a class="pa" href="/products/<%= p.brand %>/<%= p.slug %>">
                <img class="pimage" src="<%= productImageUrl %>/<%= p.image %>" alt="">
            </a>
            <div class="product-info">
                <h4>
                    <%= p.name %>
                </h4>
                <h4>Â£
                    <%= parseFloat(p.price).toFixed(2) %>
                </h4>
                <% if (loggedIn) { %>
                    <p>
                        <a href="/cart/add/<%= p.slug %>">Add to cart</a>&nbsp;&nbsp;
                        <a href="/products/<%= p.brand %>/<%= p.slug %>">View Details</a>
                    </p>
                    <% } else {%>
                        <p>Please login to purchase items.</p>
                        <% } %>
            </div>
        </div>
        <% }); %>

</div>